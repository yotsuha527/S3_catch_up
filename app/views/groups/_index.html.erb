<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>introduction</ht>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= image_tag group.get_group_image(80,80) %></td>
        <td><%= group.name %></td>
        <td><%= group.introduction %></td>
        <% unless group.owner_id != current_user.id %>
        <td><%= link_to 'Edit', edit_group_path(group.id), class:"btn btn-success" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
